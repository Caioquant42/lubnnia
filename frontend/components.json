{
  // shadcn/ui Configuration
  // This file configures the shadcn/ui component library (built on Radix UI primitives)
  // It's NOT redundant with tsconfig - this defines UI component paths and styling
  // See: https://ui.shadcn.com for more information
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks"
  }
}
